{
  "manifest_version": 3,
  "name": "Path Of Building Support",
  "version": "1.0",
  "description": "Path Of Building Support.",
  "permissions": ["activeTab", "scripting", "storage", "https://www.pathofexile.com/*", "background"],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "img/48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://pobb.in/*", "https://www.pathofexile.com/*"],
      "js": ["js/content.js", "js/fuse.min.js"]
    }
  ],
  "web_accessible_resources": [
    { 
      "resources": ["json/stat.json"], 
      "matches": ["https://pobb.in/*"] 
    }
  ]
}
